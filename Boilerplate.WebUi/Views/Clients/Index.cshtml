@model ConsultarClientesViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card mb-12">
     <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="FormTitle col-12">Consulta de Clientes</h5>
    </div>
     <div class="card-body">
        <form asp-action="index" asp-controller="clients">
            <div class="row form-horizontal">
              <div class="col-4 col-xs-12 mb-3">
                    <label asp-for="Cpf" class="control-label">CPF</label>
                    <input asp-for="Cpf" class="form-control" />
                </div>

                 <div class="col-8 col-xs-12 mb-3">
                    <label asp-for="Name" class="control-label">NOME</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="col-12 col-xs-12">
                    <div class="linhaSolida"></div>
                </div>
                <div class="col-12 mb-3" style="text-align: right" >
                    <button type="submit" class="btn btn btn-outline-success">
                        <span class="tf-icons bx bx-search"></span>&nbsp; Buscar
                    </button>
                    <a  asp-action="create" asp-controller="clients" class="btn btn-outline-secondary">
                        <span class="tf-icons bx bx-plus"></span>&nbsp; Novo
                    </a>                      
                    <a asp-action="" asp-controller="" class="btn btn-outline-secondary">
                        <span class="tf-icons bx bx-arrow-back"></span>&nbsp; Voltar
                    </a>
                </div>
            </div>
        </form >
        <br />

        <div class="form-group row" id="pagination-target-div">
            @await Html.PartialAsync("_ResultadoConsultaClientes", Model)
        </div>
     
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script type="text/javascript">
        $(document).ready(function (){
            $('input[Name="@nameof(Model.Cpf)"]').mask('000.000.000-00');
            $('input[Name="@nameof(Model.Cpf)"]').attr("maxlenght", "14")

            if ('!@Model.AutoComplete') {
                $('input').attr('autocomplete', 'off');
            }
        });
    </script>
}
